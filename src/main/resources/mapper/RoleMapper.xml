<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.logistics.track17.mapper.RoleMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.logistics.track17.entity.Role">
        <id column="id" property="id"/>
        <result column="role_name" property="roleName"/>
        <result column="role_code" property="roleCode"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, role_name, role_code, description, status, created_at, updated_at
    </sql>

    <!-- 查询所有角色 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM roles
        ORDER BY id
    </select>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM roles
        WHERE id = #{id}
    </select>

    <!-- 根据用户ID查询角色 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT r.*
        FROM roles r
        INNER JOIN user_roles ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
          AND r.status = 1
        ORDER BY r.id
    </select>

    <!-- 根据角色编码查询 -->
    <select id="selectByRoleCode" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM roles
        WHERE role_code = #{roleCode}
    </select>

    <!-- 插入角色 -->
    <insert id="insert" parameterType="com.logistics.track17.entity.Role" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO roles (
            role_name, role_code, description, status
        ) VALUES (
            #{roleName}, #{roleCode}, #{description}, #{status}
        )
    </insert>

    <!-- 更新角色 -->
    <update id="update" parameterType="com.logistics.track17.entity.Role">
        UPDATE roles
        SET role_name = #{roleName},
            role_code = #{roleCode},
            description = #{description},
            status = #{status}
        WHERE id = #{id}
    </update>

    <!-- 删除角色 -->
    <delete id="deleteById">
        DELETE FROM roles WHERE id = #{id}
    </delete>

    <!-- 为角色分配菜单 -->
    <insert id="assignMenus">
        INSERT INTO role_menus (role_id, menu_id)
        VALUES
        <foreach collection="menuIds" item="menuId" separator=",">
            (#{roleId}, #{menuId})
        </foreach>
    </insert>

    <!-- 删除角色的所有菜单 -->
    <delete id="deleteMenusByRoleId">
        DELETE FROM role_menus WHERE role_id = #{roleId}
    </delete>

    <!-- 为角色分配权限 -->
    <insert id="assignPermissions">
        INSERT INTO role_permissions (role_id, permission_id)
        VALUES
        <foreach collection="permissionIds" item="permissionId" separator=",">
            (#{roleId}, #{permissionId})
        </foreach>
    </insert>

    <!-- 删除角色的所有权限 -->
    <delete id="deletePermissionsByRoleId">
        DELETE FROM role_permissions WHERE role_id = #{roleId}
    </delete>

    <!-- 为用户分配角色 -->
    <insert id="assignRolesToUser">
        INSERT INTO user_roles (user_id, role_id)
        VALUES
        <foreach collection="roleIds" item="roleId" separator=",">
            (#{userId}, #{roleId})
        </foreach>
    </insert>

    <!-- 删除用户的所有角色 -->
    <delete id="deleteRolesByUserId">
        DELETE FROM user_roles WHERE user_id = #{userId}
    </delete>

</mapper>
