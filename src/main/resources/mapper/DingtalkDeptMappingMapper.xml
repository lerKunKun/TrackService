<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.logistics.track17.mapper.DingtalkDeptMappingMapper">

    <!-- ResultMap -->
    <resultMap id="BaseResultMap" type="com.logistics.track17.entity.DingtalkDeptMapping">
        <id column="id" property="id"/>
        <result column="dingtalk_dept_id" property="dingtalkDeptId"/>
        <result column="system_dept_id" property="systemDeptId"/>
        <result column="dingtalk_dept_name" property="dingtalkDeptName"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!-- 查询所有映射关系 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM dingtalk_dept_mapping
        ORDER BY id DESC
    </select>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM dingtalk_dept_mapping
        WHERE id = #{id}
    </select>

    <!-- 根据钉钉部门ID查询 -->
    <select id="selectByDingtalkDeptId" resultMap="BaseResultMap">
        SELECT * FROM dingtalk_dept_mapping
        WHERE dingtalk_dept_id = #{dingtalkDeptId}
        LIMIT 1
    </select>

    <!-- 根据系统部门ID查询 -->
    <select id="selectBySystemDeptId" resultMap="BaseResultMap">
        SELECT * FROM dingtalk_dept_mapping
        WHERE system_dept_id = #{systemDeptId}
        LIMIT 1
    </select>

    <!-- 插入映射关系 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO dingtalk_dept_mapping (
            dingtalk_dept_id,
            system_dept_id,
            dingtalk_dept_name
        ) VALUES (
            #{dingtalkDeptId},
            #{systemDeptId},
            #{dingtalkDeptName}
        )
    </insert>

    <!-- 更新映射关系 -->
    <update id="update">
        UPDATE dingtalk_dept_mapping
        <set>
            <if test="dingtalkDeptId != null">dingtalk_dept_id = #{dingtalkDeptId},</if>
            <if test="systemDeptId != null">system_dept_id = #{systemDeptId},</if>
            <if test="dingtalkDeptName != null">dingtalk_dept_name = #{dingtalkDeptName},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除映射关系 -->
    <delete id="deleteById">
        DELETE FROM dingtalk_dept_mapping
        WHERE id = #{id}
    </delete>

    <!-- 根据钉钉部门ID删除 -->
    <delete id="deleteByDingtalkDeptId">
        DELETE FROM dingtalk_dept_mapping
        WHERE dingtalk_dept_id = #{dingtalkDeptId}
    </delete>

</mapper>
