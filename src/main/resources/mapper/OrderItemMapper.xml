<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.logistics.track17.mapper.OrderItemMapper">

    <resultMap id="BaseResultMap" type="com.logistics.track17.entity.OrderItem">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="shopify_line_item_id" property="shopifyLineItemId"/>
        <result column="sku" property="sku"/>
        <result column="title" property="title"/>
        <result column="variant_title" property="variantTitle"/>
        <result column="quantity" property="quantity"/>
        <result column="price" property="price"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <insert id="batchInsert" parameterType="list">
        INSERT INTO order_items (
            order_id, shopify_line_item_id, sku, title, variant_title, quantity, price
        ) VALUES
        <foreach collection="items" item="item" separator=",">
            (#{item.orderId}, #{item.shopifyLineItemId}, #{item.sku}, #{item.title}, 
             #{item.variantTitle}, #{item.quantity}, #{item.price})
        </foreach>
    </insert>

    <select id="selectByOrderId" resultMap="BaseResultMap">
        SELECT id, order_id, shopify_line_item_id, sku, title, variant_title, quantity, price, created_at
        FROM order_items
        WHERE order_id = #{orderId}
        ORDER BY id
    </select>

</mapper>
