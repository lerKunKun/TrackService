<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.logistics.track17.mapper.AllowedCorpIdMapper">

    <resultMap id="AllowedCorpIdResultMap" type="com.logistics.track17.entity.AllowedCorpId">
        <id property="id" column="id"/>
        <result property="corpId" column="corp_id"/>
        <result property="corpName" column="corp_name"/>
        <result property="status" column="status"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="deletedAt" column="deleted_at"/>
    </resultMap>

    <!-- 查询所有允许的CorpId（排除已删除） -->
    <select id="selectAll" resultMap="AllowedCorpIdResultMap">
        SELECT * FROM allowed_corp_ids
        WHERE deleted_at IS NULL
        ORDER BY created_at DESC
    </select>

    <!-- 根据CorpId查询（排除已删除） -->
    <select id="selectByCorpId" resultMap="AllowedCorpIdResultMap">
        SELECT * FROM allowed_corp_ids
        WHERE corp_id = #{corpId} AND deleted_at IS NULL
    </select>

    <!-- 检查CorpId是否允许登录（启用状态且未删除） -->
    <select id="isCorpIdAllowed" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM allowed_corp_ids
        WHERE corp_id = #{corpId} AND status = 1 AND deleted_at IS NULL
    </select>

    <!-- 插入新的允许CorpId -->
    <insert id="insert" parameterType="com.logistics.track17.entity.AllowedCorpId" 
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO allowed_corp_ids (corp_id, corp_name, status, created_by)
        VALUES (#{corpId}, #{corpName}, #{status}, #{createdBy})
    </insert>

    <!-- 软删除：设置deleted_at时间戳 -->
    <update id="softDeleteByCorpId">
        UPDATE allowed_corp_ids
        SET deleted_at = NOW()
        WHERE corp_id = #{corpId} AND deleted_at IS NULL
    </update>

    <!-- 更新状态 -->
    <update id="updateStatus">
        UPDATE allowed_corp_ids
        SET status = #{status}
        WHERE corp_id = #{corpId} AND deleted_at IS NULL
    </update>

</mapper>
