<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.logistics.track17.mapper.UserMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.logistics.track17.entity.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="real_name" property="realName" jdbcType="VARCHAR"/>
        <result column="role" property="role" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
        <result column="last_login_time" property="lastLoginTime" jdbcType="TIMESTAMP"/>
        <result column="last_login_ip" property="lastLoginIp" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
        <result column="deleted_at" property="deletedAt" jdbcType="TIMESTAMP"/>
        <result column="ding_union_id" property="dingUnionId" jdbcType="VARCHAR"/>
        <result column="ding_user_id" property="dingUserId" jdbcType="VARCHAR"/>
        <result column="corp_id" property="corpId" jdbcType="VARCHAR"/>
        <result column="login_source" property="loginSource" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, username, password, email, phone, real_name, role, status, avatar,
        last_login_time, last_login_ip, created_at, updated_at, deleted_at,
        ding_union_id, ding_user_id, corp_id, login_source
    </sql>

    <!-- 根据ID查询用户 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        WHERE id = #{id} AND deleted_at IS NULL
    </select>

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        WHERE username = #{username} AND deleted_at IS NULL
    </select>

    <!-- 根据邮箱查询用户 -->
    <select id="selectByEmail" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        WHERE email = #{email} AND deleted_at IS NULL
    </select>

    <!-- 根据钉钉unionId查询用户 -->
    <select id="selectByDingUnionId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        WHERE ding_union_id = #{unionId} AND deleted_at IS NULL
    </select>

    <!-- 根据钉钉userId查询用户 -->
    <select id="selectByDingUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        WHERE ding_userid = #{dingUserId} AND deleted_at IS NULL
    </select>

    <!-- 查询所有用户列表 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        WHERE deleted_at IS NULL
        ORDER BY created_at DESC
    </select>

    <!-- 分页查询用户列表 -->
    <select id="selectByPage" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        WHERE deleted_at IS NULL
        ORDER BY created_at DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 统计用户总数 -->
    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(*) FROM users WHERE deleted_at IS NULL
    </select>

    <!-- 插入用户 -->
    <insert id="insert" parameterType="com.logistics.track17.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (
            username, password, email, phone, real_name, role, status, avatar,
            ding_union_id, ding_user_id, corp_id, login_source
        ) VALUES (
            #{username}, #{password}, #{email}, #{phone}, #{realName}, #{role}, #{status}, #{avatar},
            #{dingUnionId}, #{dingUserId}, #{corpId}, #{loginSource}
        )
    </insert>

    <!-- 更新用户信息 -->
    <update id="update" parameterType="com.logistics.track17.entity.User">
        UPDATE users
        <set>
            <if test="email != null">email = #{email},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="realName != null">real_name = #{realName},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="role != null">role = #{role},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 更新密码 -->
    <update id="updatePassword">
        UPDATE users
        SET password = #{password}
        WHERE id = #{id}
    </update>

    <!-- 更新最后登录信息 -->
    <update id="updateLastLogin">
        UPDATE users
        SET last_login_time = #{lastLoginTime},
            last_login_ip = #{lastLoginIp}
        WHERE id = #{id}
    </update>

    <!-- 更新用户状态 -->
    <update id="updateStatus">
        UPDATE users
        SET status = #{status}
        WHERE id = #{id}
    </update>

    <!-- 软删除用户 -->
    <update id="deleteById">
        UPDATE users SET deleted_at = NOW() WHERE id = #{id}
    </update>

</mapper>
